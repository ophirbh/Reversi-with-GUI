<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<HBox fx:id="root" alignment="TOP_CENTER" spacing="1.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="graphics_control.game_control.ReversiGameController">
    <children>
        <VBox alignment="CENTER" prefHeight="290.0" prefWidth="500.0" spacing="4.0">
            <VBox fx:id="mainMenuVBox" alignment="CENTER" prefHeight="290.0" prefWidth="500.0" spacing="4.0">
                <Text id="welcomeText" text="REVERSI GAME" textAlignment="CENTER" />
                <Text id="copyRightsText" text="Alon Vita and Ophir Haroche" textAlignment="CENTER" />
                <children>
                    <Button fx:id="startBtn" onAction="#startGame" prefHeight="30.0" prefWidth="85.0" text="Start Game">
                        <padding>
                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </padding>
                    </Button>
                    <Button fx:id="preferencesBtn" onAction="#preferencesClicked" prefHeight="30.0" prefWidth="85.0" text="Prefrences">
                        <padding>
                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </padding>
                    </Button>
                    <Button fx:id="exitBtn" onAction="#exitGame" prefHeight="30.0" prefWidth="85.0" text="Exit">
                        <padding>
                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </padding>
                    </Button>
                    <Button fx:id="backToMainMenuBtn" onAction="#backToMain" prefHeight="30.0" prefWidth="85.0" text="Main Menu">
                        <padding>
                            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                        </padding>
                    </Button>
                </children>
                <padding>
                    <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                </padding>
            </VBox>
            <Label prefHeight="0.0" prefWidth="200.0" fx:id="label" alignment="CENTER"/>
         <DialogPane prefHeight="200.0" prefWidth="200.0" fx:id="dialog"/>
        </VBox>
    </children>
</HBox>
